<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uddishverma.pg_app_beta.RegisterPG">

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#607D8B"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="15dp"
            android:text="PG IMAGES"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#607D8B"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="15dp"
            android:text="(Please Upload the PG Images)"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pg_img_one"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_photo_camera_black_24dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/aluminum" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/pg_img_btn_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="UPLOAD" />

                <Button
                    android:id="@+id/cancel_image_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cancel_white_18dp"
                    android:text="EDIT"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/aluminum" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pg_img_two"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_photo_camera_black_24dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/aluminum" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/pg_img_btn_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="UPLOAD" />

                <Button
                    android:id="@+id/cancel_image_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cancel_white_18dp"
                    android:text="EDIT"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/aluminum" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pg_img_three"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_photo_camera_black_24dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/aluminum" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/pg_img_btn_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="UPLOAD" />

                <Button
                    android:id="@+id/cancel_image_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cancel_white_18dp"
                    android:text="EDIT"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/aluminum" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pg_img_four"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_photo_camera_black_24dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/aluminum" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/pg_img_btn_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="UPLOAD" />

                <Button
                    android:id="@+id/cancel_image_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_cancel_white_18dp"
                    android:text="EDIT"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/aluminum" />

        <com.sackcentury.shinebuttonlib.ShineButton
            android:id="@+id/shine_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@color/white"
            android:src="@android:color/darker_gray"
            app:allow_random_color="false"
            app:big_shine_color="#1A237E"
            app:btn_fill_color="#1A237E"
            app:click_animation_duration="200"
            app:enable_flashing="false"
            app:shine_animation_duration="1500"
            app:shine_count="8"
            app:shine_distance_multiple="1.5"
            app:shine_turn_angle="10"
            app:siShape="@raw/like"
            app:small_shine_color="@color/colorPrimary"
            app:small_shine_offset_angle="20" />

    </LinearLayout>

</ScrollView>


