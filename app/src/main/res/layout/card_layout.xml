<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/card_view"
        android:padding="10dp">
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/pg_image"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:src="@drawable/pg1"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/pg_name"
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="35dp"
                    android:text="Name"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/pg_location"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Location"
                    android:textSize="30dp"/>

                <LinearLayout
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    >
                    <ImageView
                        android:id="@+id/ic_wifi"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_wifi_blue_grey_700_24dp"
                        />
                    <ImageView
                        android:id="@+id/ic_lunch"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:src="@drawable/ic_restaurant_grey_700_24dp"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:id="@+id/ic_car_parking"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:src="@drawable/ic_time_to_leave_grey_700_24dp"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:id="@+id/ic_metro"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:src="@drawable/ic_directions_subway_grey_700_24dp"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        
    </android.support.v7.widget.CardView>

</LinearLayout>