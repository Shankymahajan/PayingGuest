<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="MyTheme.base" >
        <item name="android:statusBarColor">@color/mainPrimaryDark</item>
        <item name="android:navigationBarColor">@color/mainPrimaryDark</item>
    </style>

    <style name="MyTheme.base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- set Can use Activity transitions -->
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />





    <style name="ProfilePage" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/profile_page_primary_dark</item>
        <item name="android:navigationBarColor">@color/profile_page_primary_dark</item>

    </style>



    <style name="MainActivityTheme" parent="MyTheme.base">
        <item name="android:statusBarColor">@color/mainPrimaryDark</item>
        <item name="android:navigationBarColor">@color/mainPrimary</item>

    </style>


    <!--loginSignup-->
    <style name="loginsignupTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/loginsignPrimaryDark</item>
        <item name="android:navigationBarColor">@color/loginsignPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <!--login-->
    <style name="login_screen_button" parent="Theme.AppCompat.Light">
            <item name="colorControlHighlight">@color/loginsignupAccent</item>
        <item name="colorButtonNormal">@color/loginsignPrimary</item>

        <item name="android:textColorHint">@color/black</item>

    </style>

    <style name="StyleTilEditTextTheme">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:textSize">17dp</item>
    </style>
    <style name="StyleTilEditText">

        <item name="android:theme">@style/StyleTilEditTextTheme</item>
        <item name="android:paddingTop">4dp</item>
    </style>
</resources>
