<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uddishverma.pg_app_beta">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterPG" />
        <activity android:name=".FindPGActivity" />
        <activity android:name=".FragmentCaller" />
        <activity android:name=".LoginUserActivity" />
        <activity android:name=".RegisterUserActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/MyTheme" />
        <activity android:name=".FilterActivity" />
        <activity android:name=".AuthorisationActivity" />
        <activity android:name=".MyAccountPage" />
        <activity android:name=".MyRegisteredPGInfo"></activity>
    </application>

</manifest>